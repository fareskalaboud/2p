<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="seg2.compair.CountrySelectActivity"
                android:focusable="false"
                android:scaleType="center"
                android:background="#d1ecf7"
                android:screenOrientation="portrait">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/background"
            android:background="@drawable/front_end_background"
            android:layout_centerInParent="true"
            android:scaleType="center"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/text"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select multiple countries"
            android:textSize="22dp"
            android:textStyle="bold"
            android:id="@+id/txtSelectCountry"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="14dp"
            android:layout_centerHorizontal="true"/>

    <ListView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:id="@+id/listView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:layout_below="@+id/txtSelectCountry"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/graph_button"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true" android:textStyle="bold" android:id="@+id/graphButton"
            android:background="#0F6699"
            android:layout_below="@id/listView"
            android:textColor="#FFFFFF"
            android:onClick="onClick"
            style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>