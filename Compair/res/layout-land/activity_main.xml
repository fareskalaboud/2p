<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/front_end_background"
    android:focusable="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="landscape"
    tools:context="seg2.compair.MainActivity" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/text"
        android:scaleType="center" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:background="@drawable/custombutton_btn_default_holo_light"
        android:onClick="goToCountrySelector"
        android:text="@string/next_button"
        android:textAlignment="center"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/txtIntroLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView"
        android:layout_marginRight="7dp"
        android:text="Compair lets you compare several countries at a time using a variety of statistics provided by the World Bank. 
Compair contains tools to visualise and compare this data using multiple graph types.\n
Using this app is easy as pie:
Select the countries you want, pick the statistics you want to compare and see the progress of thaat statistic over time."
        android:textAlignment="center"
        android:textSize="15dp" />

</RelativeLayout>