<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="seg2.compair.MainActivity" android:focusable="false"
    android:background="@drawable/front_end_background"
    android:screenOrientation="landscape">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/text"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compair lets you compare several countries at a time using a number of"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true" android:textStyle="bold" android:id="@+id/txtIntroLine1"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="statistics that the World Bank provides. Compair visualises this"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_marginTop="145dp"
            android:layout_centerHorizontal="true" android:textStyle="bold" android:id="@+id/txtIntroLine2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="data on simple line or cubic line graphs."
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_marginTop="170dp"
            android:layout_centerHorizontal="true" android:textStyle="bold" android:id="@+id/txtIntroLine3"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Using this app is easy as pie:"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_marginTop="240dp"
            android:layout_centerHorizontal="true" android:textStyle="bold" android:id="@+id/txtIntroLine4"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select countries, pick a statistic and"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_marginTop="265dp"
            android:layout_centerHorizontal="true" android:textStyle="bold" android:id="@+id/txtIntroLine5"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="see the progress of that statistic over time."
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_marginTop="290dp"
            android:layout_centerHorizontal="true" android:textStyle="bold" android:id="@+id/txtIntroLine6"
            android:layout_alignParentEnd="false"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_button"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_marginTop="370dp"
            android:layout_centerHorizontal="true" android:textStyle="bold" android:id="@+id/nextButton"
            android:background="#0F6699"
            android:textColor="#FFFFFF"
            android:onClick="goToCountrySelector"
            style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>