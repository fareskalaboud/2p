<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="seg2.compair.CountrySelectActivity" android:focusable="false"
                android:background="@drawable/front_end_background"
                android:screenOrientation="landscape">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/text"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose countries or an alliance, then click 'Graph'."
            android:textSize="22dp"
            android:textStyle="bold"
            android:id="@+id/txtSelectCountry"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="14dp"
            android:layout_centerHorizontal="true"/>

    <ListView
        android:id="@+id/countryListView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/filter" />

    <ListView
            android:id="@+id/allianceListView"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/filter" />

    <EditText android:id="@+id/filter"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint="@string/icon_search"
              android:inputType="textVisiblePassword"
              android:layout_below="@id/txtSelectCountry"/>

    <Button
        android:id="@+id/graphButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countryListView"
        android:layout_centerHorizontal="true"
        android:background="#0F6699"
        android:onClick="onClick"
        android:text="@string/graph_button"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:textStyle="bold" />

    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Countries"
            android:layout_marginRight="10dp"
            android:textSize="25dp"
            android:id="@+id/countryRadioButton"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignEnd="@+id/filter"/>

    <RadioButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Alliances"
                 android:textSize="25dp"
                 android:id="@+id/allianceRadioButton"
                 android:layout_below="@+id/countryRadioButton"
                 android:layout_alignStart="@+id/countryRadioButton"
                 android:layout_marginRight="10dp"/>

</RelativeLayout>